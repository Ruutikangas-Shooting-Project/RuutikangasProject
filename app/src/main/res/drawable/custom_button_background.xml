<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark" />
            <corners android:radius="8dp" /> <!-- Increased radius for better landscape appearance -->
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- Default button state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonBackground" />
            <corners android:radius="8dp" /> <!-- Increased radius for better landscape appearance -->
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
